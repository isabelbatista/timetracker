<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hackday.springer.timetrack.EntryActivity"
    tools:showIn="@layout/activity_entry">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_startWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Work" />
            <Button
                android:id="@+id/btn_stopWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop Work" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_startBreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Work" />
            <Button
                android:id="@+id/btn_stopBreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop Work" />
        </LinearLayout>

    </LinearLayout>







</android.support.constraint.ConstraintLayout>
